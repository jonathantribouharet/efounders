<div class="row">

	<h1>Login</h1>	

	<div class="col-md-6 col-md-offset-3">

		<div class="center">
			<%= link_to 'Login with Facebook', '/auth/facebook', class: 'btn btn-default' %>	
		</div>
		
		<hr>

		<%= bootstrap_form_tag url: login_path do |f| %>

			<%= f.text_field :email, value: params[:email], label: 'email' %>
			<%= f.password_field :password, label: 'password' %>

			<%= f.submit 'Login' %>
			<%= link_to 'Password forgot?', password_forgot_users_path, class: 'btn btn-default' %>
			<%= link_to 'Create an account', new_user_path, class: 'btn btn-default' %>

		<% end %>

	</div>

</div>
