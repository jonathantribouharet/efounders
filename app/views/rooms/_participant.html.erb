<li class="participant <%= participant.is_active? ? 'active' : '' %>">
	<%= image_tag participant.media.url(:thumb) %>
	<span class="username"><%= participant.username %></span>

	<% if @room.can_ban_user?(current_user, participant) %>
		<%= link_to 'X', ban_room_path(@room, participant), method: :post, data: {confirm: 'Ban this user?'}, remote: true %>
	<% end %>
</li>