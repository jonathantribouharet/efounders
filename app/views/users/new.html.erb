<div class="row">

	<h1>Sign up</h1>	

	<div class="col-md-6 col-md-offset-3">

		<%= simple_form_for @user, url: users_path do |f| %>

			<%= f.input :media, label: 'Avatar' %>
			<%= f.input :username %>
			<%= f.input :email %>
			<%= f.input :password %>

			<%= f.button :submit %>

		<% end %>


	</div>

</div>
